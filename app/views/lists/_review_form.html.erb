<div class="card" style="width: 25rem;">
  <div class="card-body">
    <h5 class="card-title">Add your review</h5>
    <%= simple_form_for [@list, @review] do |f| %>
      <%= f.input :comment %>
      <%= f.input :rating, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "jquery-bar-rating"}}  %>
      <%= f.submit class: "btn btn-flat mb-3" %>
    <% end %>
  </div>
</div>
